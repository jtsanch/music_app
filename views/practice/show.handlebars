<script src='/javascript/practice_session.js'></script>

<input hidden id='session_id' value={{session_id}}>
<input hidden id='if_musician' value={{if_musician}}>
<input hidden id='practice_start' value={{practice_start}}>
<input hidden id='practice_end' value={{practice_end}}>


<video id='critique_video' hidden {{#if if_musician}}controls{{/if}}></video>
<div id='active_critique'></div>
<audio id='critique_audio' hidden></audio>

<div id="playback-container" hidden>
	{{#if if_musician}}
		<div class="pure-u-2-3" id="video-container">
		    <video class="bottom-video" id="my-video" autoplay></video>
		    <video class="top-video" id="their-video" autoplay></video>
		    <audio id='their-audio' hidden autoplay></audio>
		</div>
	{{else}}
		<div class="psure-u-2-3" id="video-container">
		    <video class="top-video" id="my-video" autoplay></video>
		    <video class="bottom-video" id="their-video" autoplay></video>
		    <audio id='their-audio' hidden autoplay></audio>
		</div>
	{{/if}}
</div>


{{#if if_musician}}
	<div id="waiting_response">
		<div id="waiting_text">Waiting for the critiquer...</div>
	</div>
	
	
	<input type='button' class="btn btn-default btn-lg" id="start_session" value="Start Session">
	<div class='right_bar' id='critiques' hidden></div>

{{else}}
	<div id="waiting_button-panel">
		awdfef Waiting for the performer to start practicing....
	</div>
    <div id="button-panel">
        <h3>Rate the performers while they play!</h3>
        <h5>Green = good, Red = could use more work</h5>
        <div class="tag-pair btn-group btn-group-lg">
            <button type="button" class="btn btn-default up" id="good-pitch" value="pitch">Pitch</button>
            <button type="button" class="btn btn-default down" id="bad-pitch" value="pitch">Pitch</button>
        </div>
        <div class="tag-pair btn-group btn-group-lg">
            <button type="button" class="btn btn-default up" id="good-tone" value="tone">Tone</button>
            <button type="button" class="btn btn-default down" id="bad-tone" value="tone">Tone</button>
        </div>
        <div class="tag-pair btn-group btn-group-lg">
            <button type="button" class="btn btn-default up" id="good-rhythm" value="rhythm">Rhythm</button>
            <button type="button" class="btn btn-default down" id="bad-rhythm" value="rhythm">Rhythm</button>
        </div>
        <div class="tag-pair btn-group btn-group-lg">
            <button type="button" class="btn btn-default up" id="good-posture" value="posture">Posture</button>
            <button type="button" class="btn btn-default down" id="bad-posture" value="posture">Posture</button>
        </div>
    </div>

    <div id='waiting_critique'></div>
	<div id='critiques'></div>
	<input id="critique_text" type="text" placeholder="say something..">

{{/if}}
